@{
    ViewData["Title"] = "Edit";
}

@model SocialMedia

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12" style="padding: 20px; display: flex; justify-content: center; align-items: center;">
                    <h1>Edit Social Media</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <form method="post" enctype="multipart/form-data">

                                <div class="mb-3">
                                    <label asp-for="Link" class="form-label">Link</label>
                                    <input asp-for="Link" class="form-control">
                                    <span class="text-danger" asp-validation-for="Link"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Icon" class="form-label">Icon</label>
                                    <input asp-for="Icon" class="form-control">
                                    <span class="text-danger" asp-validation-for="Icon"></span>
                                </div>

                                <button type="submit" class="btn btn-outline-dark my-3">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section Scripts{
    <script src="~/manage/main.js"></script>
}
