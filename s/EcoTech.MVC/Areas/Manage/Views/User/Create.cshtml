@{
    ViewData["Title"] = "Create";
}

@model UserVM

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12" style="padding: 20px; display: flex; justify-content: center; align-items: center;">
                    <h1>Create User</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <form method="post" enctype="multipart/form-data">

                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label">FullName</label>
                                    <input asp-for="FullName" class="form-control">
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UserName" class="form-label">UserName</label>
                                    <input asp-for="UserName" class="form-control">
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" class="form-control">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>

                                <button type="submit" class="btn btn-outline-dark my-3">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section Scripts{
    @*@await Html.PartialAsync("_ValidationPartial")*@

    <script src="~/manage/main.js"></script>
}
