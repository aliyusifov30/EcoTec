@model List<UserVM>
@{
    ViewData["Title"] = "Admin";
    int count = 0;

}
<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-2">
                <h1>Istifadəçilər və Adminlər</h1>
                <div class="col-lg-12"><a asp-action="createUser" style="float:right;margin-top:1rem" class="text-dark" data-bs-toggle="tooltip" data-bs-placement="left" title="Create"><i class="fa-solid fa-user-plus" style="font-size:30px"></i></a></div>
            </div>
            <div class="col-lg-12">
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">FullName</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Email</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item?.FullName</td>
                                <td>@item?.UserName</td>
                                <td>@item?.Email</td>

                                <td style="width:150px">
                                    <a class="btn btn-warning" asp-action="editUser" asp-route-id="@item?.Id"><i class="fa-solid fa-pen text-white"></i></a>
                                    <a class="btn btn-danger btn-sweet-alert" asp-action="delete" asp-route-id="@item?.Id"><i class="fa-solid fa-trash-can text-white"></i></a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
